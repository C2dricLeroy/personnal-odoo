    <record id="view_project_technology_list" model="ir.ui.view">
        <field name="name">project.technology.list</field>
        <field name="model">project.technology</field>
        <field name="arch" type="xml">
            <list string="Technologies" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category_type"/>
                <field name="website_url" widget="url"/>
            </list>
        </field>
    </record>

    <record id="view_project_technology_form" model="ir.ui.view">
        <field name="name">project.technology.form</field>
        <field name="model">project.technology</field>
        <field name="arch" type="xml">
            <form string="Technology">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="ex: Python"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category_type"/>
                            <field name="website_url" placeholder="https://..."/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <separator string="Description"/>
                    <field name="description" placeholder="Technical description"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_technology" model="ir.actions.act_window">
        <field name="name">Technologies</field>
        <field name="res_model">project.technology</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Add your first technology
          </p>
        </field>
    </record>

    <menuitem id="menu_project_technology"
              name="Project technologies"
              parent="website.menu_project_config"
              action="action_project_technology"
              sequence="50"/>

</odoo>
